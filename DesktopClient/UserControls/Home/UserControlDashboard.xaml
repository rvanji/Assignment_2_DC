<UserControl x:Class="DesktopClient.UserControls.Home.UserControlDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopClient.UserControls.Home"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="750">
    <Border CornerRadius="35" BorderThickness="0">
        <Border.Background>
            <SolidColorBrush Color="White" Opacity="0.70"/>
        </Border.Background>
        <Grid>
            <DataGrid Name="dataGridRemoteServices" Width="670" Height="225" Margin="0,92,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" RowHeight="27" IsReadOnly="True" AutoGenerateColumns="False" AlternatingRowBackground="LightGray">
                <DataGrid.Resources>
                    <Style TargetType="DataGrid">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                    </Style>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="DarkSlateGray" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="FontWeight" Value="DemiBold" />
                        <Setter Property="BorderThickness" Value="0,0,1,2" />
                        <Setter Property="BorderBrush" Value="White" />
                        <Setter Property="Padding" Value="5,5,5,5"/>
                        <Setter Property="Margin" Value="0,0,0,0"/>
                    </Style>
                    <Style x:Key="DataGridTextColumn" TargetType="TextBlock">
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="Padding" Value="3,5,5,8"/>
                        <Setter Property="Margin" Value="0,0,0,0"/>
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ClientID" Binding="{Binding Client.ClientID}" Width="*" ElementStyle="{StaticResource DataGridTextColumn}" Visibility="Hidden"/>
                    <DataGridTextColumn Header="IP Address" Binding="{Binding IPAddress}" Width="*" ElementStyle="{StaticResource DataGridTextColumn}"/>
                    <DataGridTextColumn Header="Port" Binding="{Binding Port}" Width="130" ElementStyle="{StaticResource DataGridTextColumn}"/>
                    <DataGridTextColumn Header="No of Jobs" Binding="{Binding NoOfJobs}" Width="140" ElementStyle="{StaticResource DataGridTextColumn}"/>
                    <DataGridTextColumn Header="Allocated" Binding="{Binding IsAllocated}" Width="*" ElementStyle="{StaticResource DataGridTextColumn}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Label Content="Remote Services" Margin="555,37,0,0" Height="auto" Width="auto" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" HorizontalContentAlignment="Right" FontWeight="SemiBold" Padding="0,5,5,5"/>
            <Button x:Name="btnReloadRemoteServices" HorizontalAlignment="Left" Margin="519,46,0,0" VerticalAlignment="Top" Width="24" Foreground="White" Height="24" BorderBrush="{x:Null}" HorizontalContentAlignment="Center" FontWeight="Bold" RenderTransformOrigin="-24.143,0.237" IsTabStop="False" Click="btnReloadRemoteServices_Click">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="/DesktopClient;component/Resources/Buttons/Other/ReloadGreen.png"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/Resources/Buttons/Other/ReloadGray.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>
